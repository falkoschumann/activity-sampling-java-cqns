<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.stage.Stage?>

<Stage fx:id="stage" minHeight="600.0" minWidth="800.0" title="Working Hours by Number" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.muspellheim.activitysampling.frontend.WorkingHoursByNumberController">
   <scene>
      <Scene stylesheets="@style.css">
         <root>
            <BarChart fx:id="chart">
              <xAxis>
                <CategoryAxis label="Working hours" side="BOTTOM" fx:id="xAxis" />
              </xAxis>
              <yAxis>
                <NumberAxis fx:id="yAxis" label="Number" side="LEFT" />
              </yAxis>
            </BarChart>
         </root>
      </Scene>
   </scene>
</Stage>
