<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="small-window" stylesheets="@uwp.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.muspellheim.activitysampling.frontend.PreferencesViewController">
   <children>
      <VBox prefWidth="640.0" styleClass="input-control-group" stylesheets="@uwp.css">
         <children>
            <Label styleClass="title" text="Activity Sampling" />
            <VBox>
               <children>
                  <Label styleClass="subtitle" text="Period" />
                  <VBox styleClass="input-control">
                     <children>
                        <Label styleClass="base" text="Duration" />
                        <HBox alignment="CENTER_LEFT" spacing="8.0">
                           <children>
                              <Spinner fx:id="periodDuration" editable="true" initialValue="20" max="1440" min="1" />
                              <Label text="minutes" />
                           </children>
                        </HBox>
                        <Button mnemonicParsing="false" text="Reset Timer" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label styleClass="subtitle" text="Activity Log" />
                  <VBox styleClass="input-control">
                     <children>
                        <Label styleClass="base" text="Save to file" />
                        <TextField fx:id="activityLogFile" editable="false" promptText="activity-log.csv" />
                        <Button mnemonicParsing="false" onAction="#handleChange" text="Change" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</VBox>
