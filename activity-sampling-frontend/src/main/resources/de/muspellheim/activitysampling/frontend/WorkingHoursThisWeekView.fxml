<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<Stage fx:id="stage" minHeight="600.0" minWidth="800.0" title="%workingHoursThisWeek.title" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.muspellheim.activitysampling.frontend.WorkingHoursThisWeekController">
    <scene>
        <Scene stylesheets="@style.css">
         <VBox>
            <children>
               <HBox alignment="CENTER_LEFT" spacing="8.0">
                  <children>
                     <Label styleClass="base" text="%workingHoursThisWeek.calendarWeekText.text" />
                     <TextField fx:id="calendarWeekText" editable="false" focusTraversable="false" prefWidth="100.0" />
                     <Pane HBox.hgrow="ALWAYS" />
                     <Button mnemonicParsing="false" onAction="#handleSelectTags" text="%workingHoursThisWeek.selectTagsButton.text">
                        <graphic>
                           <ImageView pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@label.png" />
                              </image>
                           </ImageView>
                        </graphic>
                     </Button>
                  </children>
                  <VBox.margin>
                     <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                  </VBox.margin>
               </HBox>
               <TreeTableView fx:id="activitiesTable" prefHeight="660.0" prefWidth="1000.0" showRoot="false" VBox.vgrow="ALWAYS">
                 <columns>
                   <TreeTableColumn fx:id="timestampColumn" prefWidth="130.0" text="%workingHoursThisWeek.timestampColumn.text" />
                     <TreeTableColumn fx:id="periodColumn" prefWidth="100.0" text="%workingHoursThisWeek.periodColumn.text" />
                     <TreeTableColumn fx:id="activityColumn" prefWidth="440.0" text="%workingHoursThisWeek.activityColumn.text" />
                   <TreeTableColumn fx:id="tagsColumn" prefWidth="300.0" text="%workingHoursThisWeek.tagsColumn.text" />
                 </columns>
               </TreeTableView>
               <HBox alignment="CENTER_LEFT" spacing="8.0">
                  <children>
                     <Label styleClass="base" text="%workingHoursThisWeek.totalWorkingHoursText.text" />
                     <TextField fx:id="totalWorkingHoursText" editable="false" focusTraversable="false" prefWidth="100.0" />
                  </children>
                  <VBox.margin>
                     <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                  </VBox.margin>
               </HBox>
            </children>
         </VBox>
        </Scene>
    </scene>
</Stage>
