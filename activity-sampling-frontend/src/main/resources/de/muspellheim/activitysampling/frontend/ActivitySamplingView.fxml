<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.muspellheim.activitysampling.frontend.ActivitySamplingViewController">
   <children>
      <MenuBar fx:id="menuBar">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handlePreferences" text="Preferences" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="640.0" prefWidth="360.0" spacing="4.0">
         <children>
            <Label text="Activity*" />
            <TextField fx:id="activity" disable="${controller.formDisabled}" onAction="#handleLogActivity" promptText="What are you working on?" />
            <Label text="Optional tags">
               <VBox.margin>
                  <Insets top="8.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="optionalTags" disable="${controller.formDisabled}" onAction="#handleLogActivity" promptText="Customer, Project, Product" />
            <SplitMenuButton fx:id="log" alignment="CENTER" disable="${controller.formDisabled}" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogActivity" text="Log">
              <items>
                <MenuItem mnemonicParsing="false" text="Lorem Ipsum" />
                <MenuItem mnemonicParsing="false" text="[Foo, Bar] Lorem ipsum" />
              </items>
               <VBox.margin>
                  <Insets top="8.0" />
               </VBox.margin>
            </SplitMenuButton>
            <Label fx:id="progressText" alignment="CENTER" maxWidth="1.7976931348623157E308" text="00:20:00">
               <VBox.margin>
                  <Insets top="8.0" />
               </VBox.margin>
            </Label>
            <ProgressBar fx:id="progressBar" maxWidth="1.7976931348623157E308" progress="0.0" />
            <TextArea fx:id="activityLog" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets top="8.0" />
               </VBox.margin>
            </TextArea>
         </children>
         <padding>
            <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
         </padding>
      </VBox>
   </children>
</VBox>
